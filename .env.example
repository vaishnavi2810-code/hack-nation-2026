# ============================================================================
# CallPilot Environment Configuration
# ============================================================================
# Copy this file to .env and fill in all values
# NEVER commit .env file - it contains secrets
# ============================================================================

# ============================================================================
# ELEVENLABS - Voice AI Agent
# ============================================================================
ELEVENLABS_API_KEY=sk_your_api_key_here
ELEVENLABS_AGENT_ID=agent_your_agent_id_here
ELEVENLABS_API_BASE_URL=https://api.elevenlabs.io/v1

# ============================================================================
# TWILIO - Voice Calls & SMS
# ============================================================================
TWILIO_ACCOUNT_SID=AC_your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+12125551234
TWILIO_API_BASE_URL=https://api.twilio.com

# ============================================================================
# GOOGLE CALENDAR - Appointment Storage
# ============================================================================
GOOGLE_CALENDAR_ID=your_calendar_id@group.calendar.google.com
GOOGLE_CREDENTIALS_PATH=./google_credentials.json
GOOGLE_OAUTH_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your_client_secret_here

# ============================================================================
# DOCTOR SETTINGS
# ============================================================================
DOCTOR_TIMEZONE=America/New_York
DOCTOR_EMAIL=doctor@example.com
APPOINTMENT_DURATION_MINUTES=30
APPOINTMENT_BUFFER_MINUTES=10

# ============================================================================
# REMINDER SCHEDULER
# ============================================================================
REMINDER_HOURS_BEFORE=3
REMINDER_CHECK_INTERVAL_SECONDS=900
ENABLE_REMINDERS=true

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=sqlite:///./callpilot.db
# For production: DATABASE_URL=postgresql://user:password@localhost/callpilot

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
SECRET_KEY=your_super_secret_key_change_this_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# APPLICATION
# ============================================================================
APP_NAME=CallPilot
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO
API_BASE_URL=http://localhost:8000
CORS_ALLOWED_ORIGINS=http://localhost:5173

# ============================================================================
# TWILIO WEBHOOK (for inbound calls)
# ============================================================================
WEBHOOK_URL=http://localhost:8000/api/webhooks/elevenlabs

# ============================================================================
# SMS SETTINGS
# ============================================================================
ENABLE_SMS_CONFIRMATIONS=true
SMS_CONFIRMATION_MESSAGE=Hi {name}, your appointment is confirmed for {date} at {time}. Reply STOP to opt out.

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_PATIENT_MANAGEMENT=true
ENABLE_APPOINTMENT_REMINDERS=true
ENABLE_OUTBOUND_CALLS=true
ENABLE_CALL_LOGGING=true
