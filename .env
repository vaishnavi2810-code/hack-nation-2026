# ===========================================
# CallPilot Environment Configuration
# Copy this file to .env and fill in values
# ===========================================

# ----- Google Calendar -----
CALLPILOT_GOOGLE_CREDENTIALS_PATH=credentials.json
CALLPILOT_GOOGLE_TOKEN_PATH=token.json
CALLPILOT_CALENDAR_ID=primary

# ----- Appointment Settings -----
CALLPILOT_APPOINTMENT_DURATION_MINUTES=30
CALLPILOT_BUFFER_BETWEEN_APPOINTMENTS_MINUTES=0

# ----- Doctor Availability -----
# Hours in 24h format
CALLPILOT_AVAILABLE_START_HOUR=9
CALLPILOT_AVAILABLE_START_MINUTE=0
CALLPILOT_AVAILABLE_END_HOUR=17
CALLPILOT_AVAILABLE_END_MINUTE=0

# Days available (0=Monday, 6=Sunday)
# Default: Monday-Friday
CALLPILOT_AVAILABLE_DAYS=[0,1,2,3,4]

# Timezone (pytz format)
CALLPILOT_TIMEZONE=America/New_York

# ----- Twilio (for voice calls) -----
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ----- ElevenLabs (AI voice agent) -----
ELEVENLABS_API_KEY=your_api_key
ELEVENLABS_AGENT_ID=your_agent_id
ELEVENLABS_VOICE_ID=your_voice_id

# ----- Reminder Settings -----
REMINDER_HOURS_BEFORE_APPOINTMENT=3
REMINDER_CRON_INTERVAL_MINUTES=15